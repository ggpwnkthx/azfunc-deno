{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "deno run -A .claude/hooks/fmt.ts"
          },
          {
            "type": "command",
            "command": "deno run -A .claude/hooks/lint.ts"
          },
          {
            "type": "command",
            "command": "deno run -A .claude/hooks/check.ts"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:github.com)",
      "Bash(deno fmt*)",
      "Bash(deno lint --fix*)",
      "Bash(deno check*)",
      "Bash(deno task*)",
      "Bash(func host start)"
    ]
  }
}
