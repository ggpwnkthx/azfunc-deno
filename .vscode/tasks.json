{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "azfunc: start",
      "command": "func host start",
      "isBackground": true,
      "problemMatcher": {
        "base": "$deno",
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "^(.*Worker process started and initialized.)$"
        }
      },
      "dependsOn": "azfunc: predeploy"
    },
    {
      "type": "shell",
      "label": "azfunc: predeploy",
      "command": "deno task gen",
    }
  ]
}
