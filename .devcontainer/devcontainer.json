{
  "name": "Azure Functions Deno Custom Handler",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "initializeCommand": "sh -c 'ENVFILE=\"${localWorkspaceFolder}/.env\"; if [ ! -f \"$ENVFILE\" ]; then umask 000; : > \"$ENVFILE\"; chmod 666 \"$ENVFILE\"; fi'",
  "runArgs": [
    "--env-file",
    "${localWorkspaceFolder}/.env"
  ],
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/site/wwwroot,type=bind,consistency=cached",
  "workspaceFolder": "/home/site/wwwroot",
  "containerEnv": {
    "AzureFunctionsJobHost__Logging__Console__IsEnabled": "true",
    "AzureFunctionsDevelopmentEnvironment": "true"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "denoland.vscode-deno",
        "justjavac.vscode-deno-extensionpack",
        "vscode-icons-team.vscode-icons",
        "ms-azuretools.vscode-azurefunctions"
      ],
      "settings": {
        "task.autoDetect": "off",
        "problemMatchers.autoDetect": "off"
      }
    }
  },
  "features": {
    "ghcr.io/jlaundry/devcontainer-features/azure-functions-core-tools:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/dotnet:2": {},
    "ghcr.io/stu-bell/devcontainer-features/claude-code:0": {},
    "ghcr.io/devcontainers/features/azure-cli:1": {}
  },
  "postCreateCommand": "chmod +x /usr/lib/azure-functions-core-tools/in-proc8/func"
}
